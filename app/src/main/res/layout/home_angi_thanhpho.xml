<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.quang.a14110161_truongthanhquang_foodyver1.Home_AnGi_ThanhPho">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="20"
        android:background="#f8f8f8">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TPHCM"
            android:layout_weight="10"
            android:background="#f8f8f8"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="10"
            android:layout_marginLeft="90dp"
            >
            <ImageButton
                android:id="@+id/ImaDoiThanhPho"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_muiten_me_black_24dp"
                android:layout_weight="2"
                android:layout_gravity="left|center"

                android:background="#f8f8f8"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Đổi tỉnh thành"
                android:layout_weight="9"
                android:id="@+id/BtnDoiThanhPho"
                android:layout_marginLeft="10dp"
                android:background="#f8f8f8"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/ListViewAnGi_DanhMuc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>